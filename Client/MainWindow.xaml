<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potapanje Podmornica - Klijent" Height="700" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Povezivanje sa serverom" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Server IP:" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtServerIp" Grid.Column="1" Text="127.0.0.1" Margin="5,0,0,0"/>

                <TextBlock Text="UDP Port:" Grid.Column="3" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUdpPort" Grid.Column="4" Text="5000" Margin="5,0,0,0"/>

                <Button x:Name="btnPrijavi" Grid.Column="6" Content="Prijavi se" Click="BtnPrijavi_Click" Height="25"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Status" Grid.Row="1" Margin="0,0,0,10" x:Name="grpStatus" Visibility="Collapsed">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtStatus" Text="Status: Nije povezan" FontWeight="Bold"/>
                <TextBlock x:Name="txtMojId" Text="Moj ID: -" Margin="0,5,0,0"/>
                <TextBlock x:Name="txtInfo" Text="" Margin="0,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Postavi podmornice" 
                  Grid.Row="2" x:Name="grpPodmornice" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Odabrana polja:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="txtOdabranaPolja" Text="Nijedna" VerticalAlignment="Center"/>
                </StackPanel>

                <UniformGrid x:Name="gridPodmornice" Grid.Row="1" Margin="10" Rows="5" Columns="5"/>

                <Button x:Name="btnPosaljiPodmornice" Grid.Row="2" Content="Pošalji podmornice" 
                        Click="BtnPosaljiPodmornice_Click" Height="30" Margin="10" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Igra" Grid.Row="2" x:Name="grpIgra" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="Izaberi protivnika:" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbProtivnici" Margin="0,5,0,0" SelectionChanged="CmbProtivnici_SelectionChanged"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="10,0,10,10">
                    <TextBlock Text="Tabla protivnika:" FontWeight="Bold"/>
                    <TextBlock Text="0 = Nepoznato, # = Promašaj, X = Pogodak" FontSize="10" Foreground="Gray"/>
                </StackPanel>

                <UniformGrid x:Name="gridTabla" Grid.Row="2" Margin="10,0,10,10"/>

                <StackPanel Grid.Row="3" Margin="10">
                    <TextBlock x:Name="txtRezultat" Text="" FontWeight="Bold" FontSize="14" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Log -->
        <GroupBox Header="Log" Grid.Row="3" Height="150">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="txtLog" IsReadOnly="True" TextWrapping="Wrap" 
                         AcceptsReturn="True"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>